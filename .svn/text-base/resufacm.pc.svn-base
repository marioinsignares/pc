 if (con_lin > 56)
    titulos();
 strcpy(mensajes,"TOTAL CIUDAD");
 totaliza(0);
 strcpy(wciu.arr,codigo_cliente.arr);
 strorg(wciu.arr,1,2);
 strcpy(mensajes,"TOTALES GENERALES");
 totaliza(1);
 con_lin=66;
 EXEC SQL CLOSE C1;
}

