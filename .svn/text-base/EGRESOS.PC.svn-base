         strcpy (inf1[1], inf1b.arr);
         strcpy (inf1[2], inf1c.arr);
         strcpy (inf1[3], inf1d.arr);

         fprintf (fp,"%-9s",cuenta1.arr);
         fprintf (fp,"%8s ",inf1[2]);
         strcpy  (cadena,cuenta1.arr);
