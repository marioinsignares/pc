              sprintf (cadena,"%9.2f",valor_cre);
              fprintf (fp,"%14s\n",fmtnum("zzz,zzz,zzz.zz",cadena,r_t));
         }
         con_lin++;
  }
  EXEC SQL CLOSE C3;
}

